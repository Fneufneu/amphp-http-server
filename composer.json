{
    "name": "amphp/http-server",
    "homepage": "https://github.com/amphp/http-server",
    "description": "A non-blocking HTTP application server for PHP based on Amp.",
    "keywords": [
        "http",
        "server",
        "async",
        "non-blocking",
        "amp",
        "amphp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@php.net"
        },
        {
            "name": "Bob Weinand"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "amphp/amp": "^3",
        "amphp/byte-stream": "^2",
        "amphp/hpack": "^3",
        "amphp/http": "^1.6",
        "amphp/pipeline": "^1",
        "amphp/socket": "^2",
        "league/uri": "^6",
        "psr/http-message": "^1",
        "psr/log": "^1|^2|^3",
        "cash/lrucache": "^1"
    },
    "require-dev": {
        "amphp/phpunit-util": "^3",
        "amphp/http-client": "^5",
        "amphp/log": "^2",
        "amphp/php-cs-fixer-config": "^2-dev",
        "league/uri-components": "^2",
        "monolog/monolog": "^2 || ^1.23",
        "phpunit/phpunit": "^9"
    },
    "minimum-stability": "dev",
    "prefer-stable": false,
    "suggest": {
        "ext-zlib": "Allows GZip compression of response bodies"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Http\\Server\\": "src"
        },
        "files": [
            "src/Driver/functions.php",
            "src/Middleware/functions.php",
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Http\\Server\\Test\\": "test"
        },
        "files": [
            "test/functions.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "scripts": {
        "test": "@php -dzend.assertions=1 -dassert.exception=1 ./vendor/bin/phpunit",
        "code-style": "@php ./vendor/bin/php-cs-fixer fix"
    }
}
